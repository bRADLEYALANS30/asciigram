{% extends "layout.html.twig"%}
{% set active = 'gram' %}
{% block main %}
<h1>Your gram</h1>
<div>
    <h2>{{ gram.message }}</h2>
    <p>Uploaded: {{ gram.uploadDate|date("H:i d/m/Y") }}</p>
    <p style="line-height: 90%; letter-spacing:3px;">{{ gram.gramified|raw }}</p>
    <p>Share your gram:<input type="text" value="{{ url('gram', {gramified: gram.id }) }}" /></p>
</div>
{% endblock %}